<div class="container-fluid p-0 text-center meal-list">
    <h3>Healthy and Nutritious Foods for Your Choice</h3>
    <div class="row">
    {{#each packages}}
        <div class="col-sm-6 col-md-3 my-col">
            <p><img src="/img/{{image}}" alt="Meal Package"></p>
            <p class="name">{{title}} </p>
            <p>Price: ${{price}} </p>
            <p>Category: {{category}} </p>
            <p>Number of Meals: {{numOfMeals}} </p>
            <p>Content: {{content}}</p>
            {{#if isTop}}
            <i class="fas fa-star">Top Meal</i>
            {{/if}}
            <br/>
        </div>        
    {{/each}}
    </div>
</div>